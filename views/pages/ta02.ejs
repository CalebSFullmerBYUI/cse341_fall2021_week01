<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1>
          <%= title %>
        </h1>
        <p>Add User</p>
        <form style="color: black;" action="<%= path %>/addUser" method="POST"><input type="text" name="username"><input type="submit" value="Add User"></form>

        <p>Remove User</p>
        <form style="color: black;" action="<%= path %>/removeUser" method="POST"><input type="text" name="username"><input type="submit" value="Remove User"></form>

        <div style="display: flex; align-items: center; justify-content: center;">
          <p style="margin: 0; padding: 0;">Users:</p>
        </div>
        <div style="display: flex; align-items: center; justify-content: center;">
          <ul>
          <% for (user of userArray) { %>
            <li><%= user %></li>
            <% } %>
          </ul>
        </div>
        <% if (showError) {%>
        <p style="color: red"><%= errorMessage %></p>
        <% } %>
      </div>
    </div>
    <div class="container">

    </div>


</body>

</html>